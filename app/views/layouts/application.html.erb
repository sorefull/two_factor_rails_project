<!DOCTYPE html>
<html>
  <head>
    <title>TwoFactorRailsProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to 'Posts', posts_path %> |
      <%= link_to 'Edit your profile', edit_user_registration_path %> |
      <%= link_to 'Log_out', destroy_user_session_path, method: :delete %>
    <% end %>

    <%= yield %>
  </body>
</html>
